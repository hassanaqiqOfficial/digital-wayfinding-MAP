	<a class="hud_to_top" href="#page">
		<span class="hud_to_top_body">
			<span class="hud_to_top_label">Back to top</span>
			<span class="hud_to_top_icon_wrapper">
				<span class="hud_to_top_icon">
					{{site.symbol("chevron_up")}}
				</span>
			</span>
		</span>
	</a>
</div>
