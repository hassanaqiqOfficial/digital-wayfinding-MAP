<div class="hud">
	<div class="hud_tabs">
		<button class="js-swap hud_tab" data-swap-target=".hud_item_1" data-swap-group="hud_item_group">
			<span class="hud_title_indicator">
				<span class="hud_title_icon hud_title_icon_airplane">{{site.symbol("airplane", "white")}}</span>
			</span>
			<h2 class="hud_title">Flight Status</h2>
		</button>
		<button class="js-swap hud_tab" data-swap-target=".hud_item_2" data-swap-group="hud_item_group">
			<span class="hud_title_indicator">
				<span class="hud_title_icon hud_title_icon_parking">{{site.symbol("parking", "white")}}</span>
			</span>
			<h2 class="hud_title">Parking Availability</h2>
		</button>
	</div>
	<div class="hud_item hud_item_1 hud_item_flights">
		<div class="hud_item_body">
			<header class="hud_header">
				<span class="hud_title_flag">
					<span class="hud_title_indicator">
						<span class="hud_title_icon hud_title_icon_airplane">{{site.symbol("airplane", "white")}}</span>
					</span>
				</span>
				<h2 class="hud_title">Flight Status</h2>
			</header>
			<div class="hud_flights">
				{{site.dropdown("hud_flight_airline hud_flight", airlines)}}
				<input class="hud_flight_input" type="search" placeholder="Search by Flight #" aria-label="Enter Flight Number"/>
				{{site.dropdown("hud_flight_date hud_flight", ["Thu, Jan 12"])}}
			</div>
			<footer class="hud_links">
				<button type="submit" class="hud_link">
					<span>Find Flight</span>
					{{site.symbol("arrow_right", "gray")}}
				</button>
				<a class="hud_link hud_link_lg" href="">
					<span>All Flights</span>
					{{site.symbol("arrow_right", "gray")}}
				</a>
				<a class="hud_link hud_link_sm" href="">
					<span>View Arrivals</span>
					{{site.symbol("arrow_right", "gray")}}
				</a>
				<a class="hud_link hud_link_sm" href="">
					<span>View Departures</span>
					{{site.symbol("arrow_right", "gray")}}
				</a>
			</footer>
			<p class="hud_help">View all flights, <em>without a flight #</em>, by clicking on the "All Flights" link above.</p>
		</div>
	</div>
	<div class="hud_item hud_item_2 hud_item_parking">
		<div class="hud_item_body">
			<header class="hud_header">
				<span class="hud_title_flag">
					<span class="hud_title_indicator">
						<span class="hud_title_icon hud_title_icon_parking">{{site.symbol("parking", "white")}}</span>
					</span>
				</span>
				<h2 class="hud_title">Parking Availability</h2>
				<h3 class="hud_time hud_time_lg">as of <time>{{time}}</time></h3>
			</header>
			<div class="hud_parking">
				<h3 class="hud_time hud_time_sm">as of <time>{{time}}</time></h3>
				{% for availability in parking %}
					<a class="hud_parking_availability" href="#">
						<h4 class="hud_parking_percent">{{availability.percent}}</h4>
						<div class="hud_parking_details">
							<h5 class="hud_parking_type">{{availability.type}}</h5>
							<div class="hud_parking_price">
								{% if availability.perHour %}
									<span class="hud_parking_price_label">${{availability.perHour}} per hour /</span>
								{% endif %}
								<span class="hud_parking_price_label">${{availability.perDay}} a day</span>
							</div>
						</div>
						{% if availability.status %}
							<h6 class="hud_parking_status{% if availability.status == "Lot Full" %} lot-full{% elseif availability.status == "Mostly Full" %} mostly-full{% elseif availability.status == "Mostly Open" %} mostly-open{% elseif availability.status == "Available" %} available{% endif %}">{{availability.status}}</h6>
						{% endif %}
					</a>
				{% endfor %}
			</div>
			<footer class="hud_links">
				<a class="hud_link" href="">
					<span>Parking Info</span>
					{{site.symbol("arrow_right", "gray")}}
				</a>
			</footer>
		</div>
	</div>
